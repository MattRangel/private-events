<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div id="header">
      <div id="home"><%= link_to "Home", "/" %> | <%= link_to "Create Event", new_event_path %></div>
      <div id="user_account">
      <% if user_signed_in? %>
        Hello, <%= link_to current_user.email, current_user %> | <%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: :delete} %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path %>
      <% end %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
